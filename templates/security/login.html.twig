{% extends 'base.html.twig' %}
{% block body %}

<div class=" p-3 rounded shadow w-50 mx-auto mt-5">
    <h3 class="mb-3">Login to your account</h3>
    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email Address" required name="_username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required name="_password">
        </div>
        <div class="form-grouop">
            <button type="submit" class="btn btn-success">
                Login
            </button>
        </div>
    </form>
</div>
{% endblock %}